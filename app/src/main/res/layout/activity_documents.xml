<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Documents">

    <ListView
            android:layout_width="413dp"
            android:layout_height="666dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"
            android:id="@+id/documents_list_view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp"/>
    <Button
            android:text="@string/gallery_activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/new_document"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/documents_list_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>